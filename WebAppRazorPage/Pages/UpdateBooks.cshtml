@page
@model WebAppRazorPage.Pages.UpdateBooksModel
@{
}
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-1"> BookName</div>
            <input type="hidden" asp-for="_Books.ID" />
            <div class="col-1"><input type="text" asp-for="_Books.BookName"  /></div>
        </div>
        <div class="row">
            <div class="col-1">Qty</div>
            <div class="col-1"><input type="number" asp-for="_Books.Qty" /></div>
        </div>
        <div class="row">
            <div class="col-1"> Price</div>
            <div class="col-1"><input type="text" asp-for="_Books.Price" /></div>
        </div>

        <div class="row">
            <div class="col-1">
                <input type="submit" value="submit" name="submit" />
                @TempData["res"]
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-1">
            <a asp-page="/ViewBooks">Books List</a>
        </div>
    </div>
</form>